    {% block scripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('uploadForm');
            const videoInput = document.getElementById('videoInput');
            const videoPreview = document.getElementById('videoPreview');
            const progressBar = document.querySelector('.progress');
            const progressBarInner = document.querySelector('.progress-bar');
            const uploadBtn = document.getElementById('uploadBtn');

            // Mostrar preview del video seleccionado
            videoInput.addEventListener('change', function() {
                if (this.files && this.files[0]) {
                    const file = this.files[0];
                    videoPreview.src = URL.createObjectURL(file);
                    videoPreview.style.display = 'block';
                }
            });

            // Manejar envío del formulario con barra de progreso
            form.addEventListener('submit', function(e) {
                e.preventDefault();

                if (!videoInput.files[0]) {
                    alert('Por favor seleccione un video para analizar.');
                    return;
                }

                // Mostrar progreso
                progressBar.style.display = 'flex';
                uploadBtn.disabled = true;

                const xhr = new XMLHttpRequest();
                const formData = new FormData(form);

                // Actualizar barra de progreso
                xhr.upload.addEventListener('progress', function(e) {
                    if (e.lengthComputable) {
                        const percentComplete = (e.loaded / e.total) * 100;
                        progressBarInner.style.width = percentComplete + '%';
                        progressBarInner.textContent = Math.round(percentComplete) + '%';
                    }
                });

                // Cuando la carga se completa
                xhr.addEventListener('load', function() {
                    if (xhr.status === 200) {
                        document.open();
                        document.write(xhr.responseText);
                        document.close();
                    } else {
                        progressBar.style.display = 'none';
                        uploadBtn.disabled = false;
                        alert('Error al procesar el video. Por favor intente nuevamente.');
                    }
                });

                // Error en la carga
                xhr.addEventListener('error', function() {
                    progressBar.style.display = 'none';
                    uploadBtn.disabled = false;
                    alert('Error de conexión. Por favor verifique su conexión a internet e intente nuevamente.');
                });

                xhr.open('POST', '/new-upload2', true);
                xhr.send(formData);
            });
        });
    </script>
    <script src="{{ url_for('static', filename='scripts/navegacion.js') }}"></script>
    {% endblock %}
